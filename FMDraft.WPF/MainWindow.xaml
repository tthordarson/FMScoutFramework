<Window x:Class="FMDraft.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMDraft.WPF"
        mc:Ignorable="d"
        Title="FM Draft" Height="429" Width="778">
    
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Name="New" Header="New" Click="New_Click" />
                <Separator />
                <MenuItem Name="Quit" Header="Quit" Click="Quit_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl>
                <TabItem Name="ConfederationTab" Header="Confederation Setup" Selector.Selected="ConfederationTab_Selected">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Grid.Column="0">Principal Nation</Label>
                        <ComboBox Name="PrincipalNationsComboBox" Grid.Row="0" Grid.Column="1" />
                    </Grid>
                </TabItem>
                <TabItem Header="League Setup">
                
                </TabItem>
                <TabItem Header="Draft Pool">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Button>Add Players to Pool</Button>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
