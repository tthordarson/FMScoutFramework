<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMDraft.WPF"
        xmlns:Tabs="clr-namespace:FMDraft.WPF.Templates" x:Class="FMDraft.WPF.MainWindow"
        mc:Ignorable="d"
        Title="FM Draft" Height="800" Width="1400">

    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem x:Name="New" Header="New" Click="New_Click" />
                <Separator />
                <MenuItem x:Name="Quit" Header="Quit" Click="Quit_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <TabControl>
                <TabItem x:Name="ConfederationTab" Header="Confederation Setup" Selector.Selected="ConfederationTab_Selected" />
                <TabItem x:Name="LeagueSetupTab" Header="League Setup"/>
                <TabItem x:Name="DraftPoolTab" Header="Draft Pool" Selector.Selected="DraftPoolTab_Selected" />
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
